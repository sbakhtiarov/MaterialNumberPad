<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numpad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/numpad_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_1"
            style="@style/numpad_number_button"
            android:text="1" />

        <TextView
            android:id="@+id/button_2"
            style="@style/numpad_number_button"
            android:text="2" />

        <TextView
            android:id="@+id/button_3"
            style="@style/numpad_number_button"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numpad_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_4"
            style="@style/numpad_number_button"
            android:text="4" />

        <TextView
            android:id="@+id/button_5"
            style="@style/numpad_number_button"
            android:text="5" />

        <TextView
            android:id="@+id/button_6"
            style="@style/numpad_number_button"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numpad_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_7"
            style="@style/numpad_number_button"
            android:text="7" />

        <TextView
            android:id="@+id/button_8"
            style="@style/numpad_number_button"
            android:text="8" />

        <TextView
            android:id="@+id/button_9"
            style="@style/numpad_number_button"
            android:text="9" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numpad_row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_action_delete"
            style="@style/numpad_number_button"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_action_delete"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_action_delete"
                android:tint="#fff"
                android:contentDescription="delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/button_0"
            style="@style/numpad_number_button"
            android:text="0" />

        <LinearLayout
            android:id="@+id/button_action_done"
            style="@style/numpad_number_button"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_action_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="#fff"
                app:srcCompat="@drawable/ic_action_done"
                android:contentDescription="done" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>